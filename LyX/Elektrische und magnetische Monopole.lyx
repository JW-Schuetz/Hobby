noprefix "false"

\end_inset

) für diesen Fluss
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
\iint_{S}\left(\text{rot }\underline{A}\right)d\underline{a} & = & \iint_{S^{+}}\left(\text{rot }\underline{A}\right)d\underline{a}+\iint_{S^{-}}\left(\text{rot }\underline{A}\right)d\underline{a}\label{eq:rechte-Seite}\\
 & = & \oint_{\partial S}\underline{A}d\underline{l}+\oint_{-\partial S}\underline{A}d\underline{l}\nonumber \\
 & = & \oint_{\partial S}\underline{A}d\underline{l}-\oint_{\partial S}\underline{A}d\underline{l}\nonumber \\
 & = & 0.\nonumber 
\end{eqnarray}

\end_inset


\end_layout

