\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
\iint_{S}\left(\text{rot }\underline{A}\right)d\underline{a} & = & \iint_{S}\underline{B}d\underline{a}\label{eq:linke-Seite}\\
 & = & \iint_{S}\left(\frac{g}{\rho^{2}}\underline{e}_{\rho}\right)d\underline{a}\nonumber \\
 & = & \frac{g}{R^{2}}\iint_{S}\underline{e}_{\rho}d\underline{a}\nonumber \\
 & = & \frac{g}{R^{2}}\left(4\pi R^{2}\right)\nonumber \\
 & = & 4\pi g.\nonumber 
\end{eqnarray}

\end_inset


\end_layout

\begin_layout Standard
