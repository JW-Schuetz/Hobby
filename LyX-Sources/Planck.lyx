\begin_layout Part*
Zeitunabhängige Schrödingergleichung
\end_layout

\begin_layout Standard
Es gilt der Energiesatz
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
E & = & \frac{mv^{2}}{2}+V\left(x\right)\\
 & = & \frac{m^{2}v^{2}}{2m}+V\left(x\right)\\
 & = & \frac{p^{2}}{2m}+V\left(x\right).
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
Mit der Korrespondenz 
\begin_inset Formula $p\rightarrow\frac{\hbar}{i}\partial_{x}$
\end_inset

 folgt
\begin_inset Formula 
\begin{eqnarray*}
E & = & -\frac{\hbar^{2}}{2m}\partial_{x}^{2}+V\left(x\right)
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
und damit mit Multiplikation mit der Wellenfunktion 
\begin_inset Formula $\psi\left(x\right)$
\end_inset


\begin_inset Formula 
\begin{eqnarray*}
-\frac{\hbar^{2}}{2m}\partial_{x}^{2}\psi\left(x\right) & = & \left[E-V\left(x\right)\right]\psi\left(x\right).
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Part*
Zeitabhängige Schrödingergleichung
\end_layout

\begin_layout Standard
Aus den Maxwellschen Gleichungen folgt (Wellengleichung der Lichtausbreitung)
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
\left(\partial_{x}^{2}-\frac{1}{c^{2}}\partial_{t}^{2}\right)\psi & = & 0.\label{eq:Wellengleichung}
\end{eqnarray}

\end_inset


\end_layout

\begin_layout Standard
Aus der relativistischen Energie-Impuls-Beziehung von Einstein
\begin_inset Formula 
\begin{eqnarray}
E^{2} & = & c^{2}p^{2}+m^{2}c^{4}\label{eq:Einstein}
\end{eqnarray}

\end_inset

folgt für ruhemasselose Teilchen
\begin_inset Formula 
\begin{eqnarray*}
E^{2}-c^{2}p^{2} & = & 0.
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
Aus den Korrespondenzen
\begin_inset Formula 
\begin{eqnarray}
p & \rightarrow & \frac{\hbar}{i}\partial_{x}\label{eq:Korrespondenzen}\\
E & \rightarrow & i\hbar\partial_{t}\nonumber 
\end{eqnarray}

\end_inset

 folgt
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\hbar^{2}\partial_{t}^{2}-c^{2}\hbar^{2}\partial_{x}^{2} & = & 0\\
\partial_{t}^{2}-c^{2}\partial_{x}^{2} & = & 0\\
\partial_{x}^{2}-\frac{1}{c^{2}}\partial_{t}^{2} & = & 0.
\end{eqnarray*}

\end_inset


\end_layout

