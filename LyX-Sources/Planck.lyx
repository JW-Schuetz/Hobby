\end{eqnarray}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Note Note
status open

\begin_layout Plain Layout
Linearisierung
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\begin{eqnarray*}
w\left(v\right) & = & \frac{8\pi}{c^{3}}\frac{v^{3}}{e^{\frac{hv}{kT}}-1}\\
 & = & \frac{8\pi}{c^{3}}\frac{v^{3}}{\frac{hv}{kT}}\\
 & = & \frac{8\pi}{c^{3}}kT\frac{v^{3}}{hv}\\
 & = & \frac{8\pi}{c^{3}}\frac{kT}{h}v^{2}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Plain Layout
Rayleigh-Jeans
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\begin{eqnarray*}
w_{R}\left(v\right) & = & \frac{8\pi}{c^{3}}kTv^{2}
\end{eqnarray*}

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
Bergündung: Mit der obigen Linearisierung folgt daraus
\begin_inset Formula 
\begin{eqnarray*}
w\left(v\right) & \thickapprox & \frac{8\pi kT}{c^{3}}\frac{1}{h}v^{2}.
\end{eqnarray*}

\end_inset


\end_layout

