)
\begin_inset Formula 
\begin{eqnarray*}
c^{2}dM & = & \frac{\hbar c^{3}}{8\pi kGM}dS\\
MdM & = & \frac{\hbar c}{8\pi kG}dS\\
M^{2}+C_{1} & = & \frac{\hbar c}{4\pi kG}S\\
S & = & \frac{4\pi kG}{\hbar c}\left(M^{2}+C_{1}\right)\\
S & = & \frac{4\pi kG^{2}}{\frac{\hbar G}{c^{3}}c^{4}}\left(M^{2}+C_{1}\right)\\
S & = & \frac{4\pi kG^{2}}{l_{P}^{2}c^{4}}\left(M^{2}+C_{1}\right)\\
S & = & k\frac{\pi R^{2}}{l_{P}^{2}}+C_{2}.
\end{eqnarray*}

\end_inset


